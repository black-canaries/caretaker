datasource mongo {
  provider = "mongodb"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt  DateTime  @default(now())
  firstName  String?
  glucose    Glucose[] @relation(fields: [glucoseIds], references: [id])
  glucoseIds String[]  @mongo.ObjectId
  id         String    @id @default(auto()) @map("_id") @mongo.ObjectId
  insulin    Insulin[] @relation(fields: [insulinIds], references: [id])
  insulinIds String[]  @mongo.ObjectId
  lastName   String?
  meals      Meal[]
  password   String
  roles      Json
  sleep      Sleep[]   @relation(fields: [sleepIds], references: [id])
  sleepIds   String[]  @mongo.ObjectId
  updatedAt  DateTime  @updatedAt
  username   String    @unique
}

model Insulin {
  createdAt DateTime @default(now())
  dose      Float
  id        String   @id @default(auto()) @map("_id") @mongo.ObjectId
  updatedAt DateTime @updatedAt
  users     User[]   @relation(fields: [usersIds], references: [id])
  usersIds  String[] @mongo.ObjectId
}

model Glucose {
  createdAt    DateTime @default(now())
  glucoseLevel Float
  id           String   @id @default(auto()) @map("_id") @mongo.ObjectId
  updatedAt    DateTime @updatedAt
  users        User[]   @relation(fields: [usersIds], references: [id])
  usersIds     String[] @mongo.ObjectId
}

model Meal {
  carbs       Float?
  createdAt   DateTime          @default(now())
  description String?
  fat         Float?
  id          String            @id @default(auto()) @map("_id") @mongo.ObjectId
  ingredients Json?
  mealType    EnumMealMealType?
  protein     Float?
  updatedAt   DateTime          @updatedAt
  user        User?             @relation(fields: [userId], references: [id])
  userId      String?
}

model Sleep {
  createdAt DateTime @default(now())
  end       DateTime
  id        String   @id @default(auto()) @map("_id") @mongo.ObjectId
  quality   Int?
  start     DateTime
  updatedAt DateTime @updatedAt
  users     User[]   @relation(fields: [usersIds], references: [id])
  usersIds  String[] @mongo.ObjectId
}

enum EnumMealMealType {
  Breakfast
  Lunch
  Dinner
  Snack
  Other
}
